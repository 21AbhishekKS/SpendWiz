<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySplashScreen"
        android:name=".MainApplication"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MySplashScreen"
            android:screenOrientation="portrait"
            >



            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".Notifications.NotificationReceiver" />
        <receiver android:name=".Notifications.DismissReceiver" />
        <receiver
            android:name=".Notifications.CategoryReceiver"
            android:exported="false" />

        <receiver
            android:name=".Notifications.SubCategoryReceiver"
            android:exported="false" />
        <receiver
            android:name=".Notifications.ShowMoreReceiver"
            android:exported="false" />
        <receiver
            android:name=".Notifications.ShowMoreSubCategoryReceiver"
            android:exported="false" />

        <service
            android:name=".Notifications.SmsNotificationListener"
            android:label="SMS Notification Reader"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>



    </application>


</manifest>